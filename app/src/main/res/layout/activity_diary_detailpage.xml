<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dd.final_report_02_20151046.DiaryDetailpage">
    <EditText
        android:id="@+id/detailpage_diary_context"
        android:layout_width="368dp"
        android:layout_height="231dp"
        android:text="Hi~ConText"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/detailpage_diary_title" />

    <Button
        android:id="@+id/detailpage_diary_addbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="76dp"
        android:onClick="onClick"
        android:text="수정"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/detailpage_diary_closebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="76dp"
        android:onClick="onClick"
        android:text="닫기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/detailpage_diary_image"
        android:layout_width="156dp"
        android:layout_height="149dp"
        app:srcCompat="@drawable/image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/detailpage_diary_date"
        android:layout_width="207dp"
        android:layout_height="47dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="Date"
        app:layout_constraintLeft_toRightOf="@+id/detailpage_diary_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detailpage_diary_which"
        android:layout_width="210dp"
        android:layout_height="44dp"
        android:text="Which"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/detailpage_diary_date"
        app:layout_constraintLeft_toRightOf="@+id/detailpage_diary_image"
        android:layout_marginLeft="8dp" />

    <EditText
        android:id="@+id/detailpage_diary_title"
        android:layout_width="366dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Title"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/detailpage_diary_image" />

</android.support.constraint.ConstraintLayout>
